<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/many_hands"
    android:layout_height="match_parent"
    tools:context="in.indetech.cfg_samriddhi.StudentDetailsTwo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Father Details" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1">

                <EditText
                    android:id="@+id/fatherNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Father Name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2">

                <EditText
                    android:id="@+id/fatherOccupationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Father's Occupation" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3">

                <EditText
                    android:id="@+id/fatherIncomeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Father's Income" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4">

                <EditText
                    android:id="@+id/fatherMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Father's mobile number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/view21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/view5"
                android:text="Mother Details" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view21">

                <EditText
                    android:id="@+id/motherNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother Name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view22">

                <EditText
                    android:id="@+id/motherOccupationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother's Occupation" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view23">

                <EditText
                    android:id="@+id/motherIncomeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother's Income" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/view25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view24">

                <EditText
                    android:id="@+id/motherMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother's mobile number" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:onClick="next"
                android:layout_below="@+id/view25"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
